<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Comptible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../css/style.ejs'); %>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;600&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container">
        <figure>
            <a"><img src="https://i.ibb.co/SmZxC8h/logo.png" class="img" alt="logo" border="0" width="250px"
                    height="150px"></a>
        </figure>
        <form class="form" id="register" action="/register" method="POST">
            <h2 class="formTitle">Register</h2>
            <p class="error">
                <% if (messages.error) { %>
                    <%= messages.error %>
                        <% } %>
            </p>

            <div>
                <input type="text" class="entry" id="name" name="name" placeholder="Enter Name" autofocus required>
            </div>
            <div>
                <input type="email" class="entry" id="email" name="email" placeholder="Enter Email" required>
            </div>
            <div>
                <div id="message" style="display: none; font-size: small; text-align: center;">
                    Password must be at least 8 characters with a capital letter and a number!</div>
                <input type="password" class="entry" id="password" name="password"
                    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" placeholder="Enter Password" required>

                <input type="password" class="entry" id="confirmPassword" name="password" placeholder="Confirm Password"
                    required>
            </div>
            <button type="submit" id="submit" class="button" style="display: none;">Register</button>
        </form>
        <a href="/login" class="changeForm">Already have an account? Sign in here!</a>
        <br>
        <a href="/info" class="changeForm">Need some help?</a>
    </div>
</body>

<script>
    //HTML elements declared as constants
    const password = document.getElementById("password");
    const confirmPassword = document.getElementById("confirmPassword");
    const message = document.getElementById("message");
    const submit = document.getElementById("submit");

    //Alert user to use certain password format
    password.onmouseover = function () {
        message.style.display = "block";
    }
    password.onmouseleave = function () {
        message.style.display = "none";
    }

    //Check if 2 password fields match
    confirmPassword.onkeyup = function () {
        if (confirmPassword.value === password.value) {
            submit.style.display = "block";
        }
        if (confirmPassword.value != password.value) {
            submit.style.display = "none";
        }

    }

</script>